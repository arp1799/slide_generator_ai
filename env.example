# Slide Generator API Environment Configuration

# OpenAI Configuration (Optional - will use Hugging Face as fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (Fallback model)
HUGGINGFACE_MODEL=microsoft/DialoGPT-medium

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# File Storage
OUTPUT_DIR=samples
MAX_FILE_SIZE=10485760

# Slide Configuration
MAX_SLIDES=20
MIN_SLIDES=1

# Production Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Server Configuration
PORT=8000
HOST=0.0.0.0 